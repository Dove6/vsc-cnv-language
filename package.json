{
  "name": "cnv-language",
  "publisher": "dove6",
  "displayName": "CNV Language",
  "description": "Basic support for CNV scripting language",
  "version": "0.0.7",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dove6/vsc-cnv-language"
  },
  "bugs": {
    "url": "https://github.com/Dove6/vsc-cnv-language/issues"
  },
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "cnv",
        "aliases": [
          "CNV",
          "cnv"
        ],
        "extensions": [
          ".cnv",
          ".def",
          ".class"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configurationDefaults": {
      "[cnv]": {
        "files.encoding": "windows1250",
        "files.eol": "\r\n"
      }
    },
    "grammars": [
      {
        "language": "cnv",
        "scopeName": "source.cnv",
        "path": "./syntaxes/cnv.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint",
    "watch": "tsc -w -p ./"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/node": "^22",
    "@types/vscode": "^1.100.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.0",
    "eslint": "^9.13.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "dependencies": {
    "iconv-lite": "0.7.0",
    "reksio-formats": "0.0.3"
  }
}