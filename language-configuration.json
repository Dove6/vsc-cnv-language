{
    "comments": {
        "lineComment": {
            "comment": "#",
            "noIndent": true
        },
        "blockComment": [ "!", ";" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}", "notIn": ["comment"] },
        { "open": "[", "close": "]", "notIn": ["comment"] },
        { "open": "(", "close": ")", "notIn": ["comment"] },
        { "open": "\"", "close": "\"" }
    ],
    "autoCloseBefore": ";,}]) \r\n\t",
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""]
    ]
}