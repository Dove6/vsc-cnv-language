{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "CNV",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#code-comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.cnv",
					"match": "@(BREAK|CONTINUE|FOR|IF|LOOP|ONEBREAK|RETURN|WHILE)\\b"
				},
				{
					"name": "keyword.operator.new.cnv",
					"match": "@(BOOL|CREATE|DOUBLE|INT|STRING)\\b"
				},
				{
					"name": "keyword.operator.cnv",
					"match": "\\+|-|\\*|@|%|;|\\^"
				},
				{
					"name": "keyword.other.cnv",
					"match": ":|="
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.cnv",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"include": "#keywords"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.number-sign.cnv",
					"match": "^\\s*#.*"
				}
			]
		},
		"code-comments": {
			"patterns": [
				{
					"name": "comment.block.cnv",
					"match": "![^;}]*"
				}
			]
		}
	},
	"scopeName": "source.cnv"
}